<%# <h2>編集 <%= resource_name.to_s.humanize %></h2>
<h2>アカウント編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "変更パスワード変更" %>
    <% if @minimum_password_length %>
       <em>(英数字 <%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <i>(変更しない場合は空白)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "変更パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "現在登録中のパスワード" %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<p class= "user-delete">アカウント削除</p>
<%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete %></p>

<div class= "back-edit">
  <%= link_to "やっぱりマイページへ戻る", user_path(current_user.id), class: "back-btn" %>
</div>
